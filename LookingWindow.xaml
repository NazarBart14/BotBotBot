<Window x:Class="BotBotBot.LookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotBotBot"
        mc:Ignorable="d"
        Title="LookingWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <Button Content="Зберегти"  Margin="0 0 10 0"/>
            <Button Content="Видалити" />
        </StackPanel>

        <ListBox x:Name="listBox" Grid.Row="0" Margin="10"/>
    </Grid>
</Window>
